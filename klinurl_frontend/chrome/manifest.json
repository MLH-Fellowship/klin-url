{ 
    "manifest_version": 2, 
    "name": "klinurl for Chrome", 
    "description": "A more convenient way of creating clean and short urls.", 
    "version": "1.0", 
    "author": "Kyle Pulido, Harriet Akot, Nyior Clement", 

    "permissions": [
                        "activeTab",
                        "http://www.klinurl.me/"
                    ],

    "background": [
                        {
                            "scripts": ["js/code/background.js", "js/code/background-1.js"],
                            "css": ["css/content.css"],
                            "persistent": false
                        }
                    ],    
    
	"icons": { 
				"16": "icons/klinurl-16.png",
				"32": "icons/klinurl-32.png",
			    "48": "icons/klinurl-48.png" ,
			    "128": "icons/klinurl-128.png"
		},


    "browser_action": {   
                        "default_icon": "icons/klinurl-48.png",   
                        "default_title": "shorten your urls",
                        "default_popup": "html/popup.html"
                    },
    "web_accessible_resources": [
                        "icons/back.jpg"
                      ]
	
}
